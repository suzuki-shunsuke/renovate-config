{
   "automerge": true,
   "configMigration": true,
   "customManagers": [
      {
         "customType": "regex",
         "datasourceTemplate": "github-releases",
         "fileMatch": [
            "\\.ya?ml$"
         ],
         "matchStrings": [
            "# yaml-language-server: \\$schema=https://raw\\.githubusercontent\\.com/(?<packageName>[^/:# \\n]+/[^/:# \\n]+)/(?<currentValue>[^/\" \\n\\(]+)/.*\\.json"
         ]
      }
   ],
   "extends": [
      "config:best-practices"
   ],
   "lockFileMaintenance": {
      "enabled": true
   },
   "major": {
      "automerge": false
   },
   "packageRules": [
      {
         "matchDepTypes": [
            "action"
         ],
         "matchPackageNames": [
            "slsa-framework/slsa-github-generator"
         ],
         "pinDigests": false
      },
      {
         "matchManagers": [
            "github-actions"
         ],
         "versioning": "semver"
      },
      {
         "enabled": false,
         "matchUpdateTypes": [
            "digest"
         ]
      },
      {
         "matchDatasources": [
            "go"
         ],
         "postUpdateOptions": [
            "gomodUpdateImportPaths"
         ]
      },
      {
         "groupName": "suzuki-shunsuke/renovate-config",
         "matchPackageNames": [
            "suzuki-shunsuke/renovate-config"
         ]
      },
      {
         "automerge": true,
         "matchPackageNames": [
            "github.com/google/go-github/*"
         ]
      },
      {
         "matchPackageNames": [
            "!/^suzuki-shunsuke//",
            "!/^aquaproj//",
            "!/^lintnet//",
            "!/^lintnet-modules//",
            "!/^securefix-action//",
            "!/^csm-actions//",
            "!/^github\\.com/suzuki-shunsuke//",
            "!/^github\\.com/aquaproj//",
            "!/^github\\.com/lintnet//",
            "!/^github\\.com/lintnet-modules//"
         ],
         "minimumReleaseAge": "3 days"
      }
   ],
   "platformAutomerge": true
}
